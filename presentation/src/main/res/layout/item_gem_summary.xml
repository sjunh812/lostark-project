<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginEnd="5dp">

    <ImageView
        android:id="@+id/iv_gem_summary"
        android:layout_width="27dp"
        android:layout_height="27dp"
        android:background="@drawable/bg_equipment_default"
        android:paddingHorizontal="2dp"
        android:paddingTop="2dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        style="@style/Widget.LostArk.Tag"
        android:id="@+id/tv_gem_summary_level"
        android:layout_width="27dp"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_equipment_quality_7"
        android:gravity="center"
        android:text="@string/label_default_quality"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/iv_gem_summary"
        app:layout_constraintStart_toStartOf="@id/iv_gem_summary"
        app:layout_constraintTop_toBottomOf="@id/iv_gem_summary" />
</androidx.constraintlayout.widget.ConstraintLayout>