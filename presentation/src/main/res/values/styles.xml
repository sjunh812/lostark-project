<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="TextAppearance.LostArk.Title" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textColor">@color/white</item>
        <item name="android:letterSpacing">0</item>
        <item name="fontFamily">@font/pretendard_bold</item>
    </style>

    <style name="TextAppearance.LostArk.SubTitle" parent="TextAppearance.MaterialComponents.Subtitle2">
        <item name="android:textColor">@color/gray_c2</item>
        <item name="android:letterSpacing">0</item>
        <item name="fontFamily">@font/pretendard_semibold</item>
    </style>

    <style name="TextAppearance.LostArk.Caption" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:textColor">@color/white</item>
        <item name="android:letterSpacing">0</item>
        <item name="fontFamily">@font/pretendard_medium</item>
    </style>

    <style name="TextAppearance.LostArk.Overline" parent="TextAppearance.MaterialComponents.Overline">
        <item name="android:textColor">@color/gray_c2</item>
        <item name="android:letterSpacing">0</item>
        <item name="fontFamily">@font/pretendard_medium</item>
    </style>

    <style name="TextAppearance.LostArk.Chip" parent="TextAppearance.MaterialComponents.Overline">
        <item name="android:textSize">9sp</item>
        <item name="android:textColor">@color/gray_c2</item>
        <item name="android:letterSpacing">0</item>
        <item name="fontFamily">@font/pretendard_medium</item>
    </style>

    <style name="TextAppearance.LostArk.Tag" parent="TextAppearance.MaterialComponents.Overline">
        <item name="android:textSize">9sp</item>
        <item name="android:textColor">@color/gray_c2</item>
        <item name="android:letterSpacing">0</item>
        <item name="fontFamily">@font/pretendard_bold</item>
    </style>

    <style name="Widget.LostArk.Tag" parent="Widget.MaterialComponents.TextView">
        <item name="android:background">@drawable/bg_chip</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingStart">8dp</item>
        <item name="android:paddingEnd">8dp</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingBottom">4dp</item>
        <item name="android:textAppearance">@style/TextAppearance.LostArk.Tag</item>
    </style>

    <style name="Widget.LostArk.Chip" parent="Widget.MaterialComponents.Chip.Action">
        <item name="chipStartPadding">0dp</item>
        <item name="chipEndPadding">2dp</item>
        <item name="chipMinHeight">22dp</item>
        <item name="chipCornerRadius">5dp</item>
        <item name="chipBackgroundColor">@color/background_chip</item>
    </style>
</resources>